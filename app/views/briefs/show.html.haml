=sub_nav do
  =breadcrumb_list    
  -if owner?(current_object)    
    %li.secondary=link_to 'edit brief', edit_brief_path(current_object), :class => "awesome small"
    -if current_object.draft?
      %li.secondary=link_to 'delete brief', brief_path(current_object), :method => :delete, :confirm => "Are you sure?", :class => "awesome"
  -if !owner?(current_object)    
    %li.secondary.watch_form
      -form_for current_object, :url => watch_brief_path(current_object), :html => { :method => :post } do |f|
        -if current_user.watching?(current_object)
          =f.submit 'stop watching', :class => "awesome small"
        -else
          =f.submit 'watch', :class => "awesome small" 
  .clear 

.col_1
  -if flash[:note].present?
    .note
      %p=flash[:note]
      
  %div[current_object]
    %h2 
      =truncate(current_object.title, :length => 30)
      =link_to 'print', brief_path(current_object, :print_mode => 1), :title => "print brief document", :class => "print_brief"
    .most_important_thing
      %p
        %span.left &ldquo;
        =current_object.most_important_message
        %span.right &rdquo;
    -if current_object.brief_items.empty? && current_object.published?
      %p This document is empty
    =render :partial => 'brief_item', :collection => (current_object.brief_items.answered), :locals => { :draft => current_object.draft? }


  - unless current_object.draft?    
    .comments_area
      %h4 Comments
      %ul.comments
        - if current_object.comments.blank?
          %li
            %p There have been no comments
        -current_object.comments.each do |comment|
          %li[comment]        
            %p.comment_body
              =small_avatar(comment.user)
              %span.speech
                %strong="#{comment_adjective_for given_name(comment.user), :position => :before}:"
                =comment.comment
              %span.clear      
        .comment
          #comment_form.comment_form
            =medium_avatar            
            - form_for :comment, :url => comments_path do |f|
              =hidden_field_tag :brief_id, current_object.id
              .speech=f.text_area :comment, :rows => 5, :cols => 80

              %p.submit_comment
                =f.submit "submit"
                    
.col_2
  -unless owner?(current_object)
    %p.emphasise=creative_response_button(current_object, current_user.proposal_for(current_object))
        
  .discussion     
    %p.emphasise
      =link_to owner?(current_object) ? "View discussion" : "Join the discussion", brief_questions_path(current_object, :f => "unanswered"), {:class => "awesome blue large", :style => "text-transform: uppercase" }
  -unless owner?(current_object)
    =render :partial => 'questions/overview', :locals => { :overview_collection => current_object.questions } 
    .hr
  
  -if owner?(current_object)
    =render :partial => 'responses'
    .hr
        
  -if current_object.published?
    =render :partial => 'invite'
