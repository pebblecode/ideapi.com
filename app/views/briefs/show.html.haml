=title_holder do
  %h2=current_object.title
    
  =link_to 'edit brief', edit_brief_path(current_object), :class => "button"
  
%ul.tabbed_links
  %li=link_to 'Overview', brief_path(current_object)
  %li=link_to 'Questions', ''

%p.most_important_thing=current_object.most_important_message

%div[current_object]
  -current_object.brief_items.each do |item|
    %h3=item.title
    %p=item.body
  