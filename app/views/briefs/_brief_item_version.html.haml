%li.revision
  .revision-body
    .info
      .buttons
        = link_to "show", "#", :class => 'toggle_revision_body'
        - if owner?(current_object)
          = link_to "delete", timeline_event_url(object), :class => "remote-delete"
      %h5 Section Update
    .body
      %p
    
        %strong 
          #{object.actor.full_name} changed section from:
      .item-revision-body
        :textile
          #{subject.body}
      %p
        %span.timestamp
          ="(#{comment_date(object.created_at)})"
