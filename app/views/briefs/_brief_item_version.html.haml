%li.revision
  .revision-body
    .info
      .buttons
        - if owner?(current_object)
          - form_for object, :html => {:method => :delete, :id => "delete_item_revision_#{object.id}", :class => 'delete-item-revision ajax-submit'} do |f|
            = f.submit('delete', :class => 'delete-item-revision-submit close-button', :id => "delete_item_revision_#{object.id}_submit")
      %h5{:class => 'toggle_revision_body' } Section Update
    .body
      %p
    
        %strong 
          #{object.actor.full_name} changed section from:
      .item-revision-body
        :textile
          #{subject.body}
      %p
        %span.timestamp
          ="(#{comment_date(object.created_at)})"
