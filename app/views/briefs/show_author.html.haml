=what_user_is_doing do
  %h3
    \- you are viewing
    =link_to truncate(current_object.title.downcase, :length => 30), object_path
    -if current_object.draft?
      \-
      =link_to '(edit)', edit_object_path
    
=title_holder do
  %ul.brief_timeline
    %li
      %span.selected Write
    %li 
      %span Publish
    %li 
      %span Discuss
    %li 
      %span Peer Review
    %li 
      %span Present
    %li 
      %span Complete

%p.most_important_thing=current_object.most_important_message

.col_1
  
  - if !current_object.draft?  
    %ul.tabbed_links
      %li=tab_link 'Brief document', brief_path(current_object)
      %li=tab_link 'Brief discussion', brief_creative_questions_path(current_object, :q => 'recent')

  %div[current_object]  
    -if current_brief_items.empty? && current_object.published?
      %p This document is empty
    =render :partial => 'brief_item', :collection => current_brief_items, :locals => { :draft => current_object.draft? }
