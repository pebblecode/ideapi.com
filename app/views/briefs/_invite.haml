-if current_object.all_involved.present?
  .discussion_stats
    %h2 
      Brief Collaborators
      %span
    %ul.watching
      -current_object.all_involved.each do |friend|
        %li
          =small_avatar(friend)
          %p
            =link_to truncate(friend.login, :lenght => 10), user_path(friend)
            -if friend.eql?(current_object.user)
              %span.author - AUTHOR
            %br
            %span
              -if friend.last_request_at.present?            
                =distance_of_time_in_words_to_now(friend.last_request_at)
                ago
              -else
                Never logged in
                
-if owner?(current_object)
  .invite_contacts
    %h4 Invite contacts to participate
    -if current_user.friends_not_watching(current_object).present?
      -form_for @invitation, :url => invitations_path do |f|
        =f.select 'recipient_list', current_user.friends_not_watching(current_object).map { |friend| [friend.login, friend.email] }, {:include_blank => true}, {:id => "contact_recipient_list"}
        =f.hidden_field 'redeemable_id', :id => "contact_redeemable_id"
        =f.hidden_field 'redeemable_type', :id => "contact_redeemable_type"
        =f.submit 'Invite', :id => "contact_submit"
    -else
      %p No contacts left to add