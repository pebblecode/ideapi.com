%div[brief_item]{:class => (brief_item_updated_for_user?(brief_item) ? "updated" : "")}
  -if brief_item.is_heading?
    %h3
      =brief_item.title
  -else
    %h4
      =brief_item.title
  %div.body
    -if brief_item.body.present?
      :textile
        #{brief_item.body}

  -if !brief_item.is_heading?
    %ul.actions{:style => "visible: none;"}
      -if current_object.active?
        %li=link_to 'Comment', '#', {:class => 'toggle_ask_question'}
      -if brief_item.timeline_events.present?
        %li=link_to 'History', '#', {:class => 'toggle_brief_item_history'}
    
    -if current_object.active?
      .ask_question
        .question_body
          =medium_avatar
          - form_for(@user_question, :url => brief_questions_path(current_object), :html => { :id => nil}) do |f|
            = render :partial => "question_form", :locals => {:f => f, :brief_item => brief_item, :counter => brief_item_counter}
          %div.clear
  
  .clear
  
  -# Adding :print local condition. In print view, we only show brief.
  -if brief_item.timeline_events.present? and local_assigns[:print].nil?
    %ul.brief_item_history
      -brief_item.timeline_events.each do |event|
        -if event.subject.is_a?(Question)
          =render :partial => 'question', :object => event.subject, :locals => { :show_relation => false }
        -elsif event.subject.is_a?(BriefItem::Version)
          =render :partial => 'brief_item_version', :locals => {:subject => event.subject, :object => event}
  

     
