%li[question]
  %p.question_body
    =small_avatar(question.user)
    %span.speech
      -if show_relation
        %strong="#{comment_adjective_for given_name(question.user), :position => :before}"
        ="(in relation to <strong>#{question.brief_item.title}</strong>):"
      -else
        %strong="#{comment_adjective_for given_name(question.user), :position => :before}:"
      =question.body_parsed
    %span.clear    
  -if question.answered?
    .author_answer
      =medium_avatar(question.brief.user)
      %span.speech
        %p 
          %strong
            =given_name(question.brief.user)
            answered:
          =question.author_answer
      %span.clear
  -else
    -if owner?(question.brief)
      .author_answer_form
        %div[question.brief_item]
          %h3
            =question.brief_item.title

          %p.body
            =question.brief_item.body_parsed
        
        =medium_avatar
        = render :partial => 'answer_form', :locals => { :question => question }
