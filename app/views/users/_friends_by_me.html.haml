%table.friends
  %thead
    %tr
      %th Nickname
      %th Email address
      %th Status
      %th Actions
  %tbody
    -current_user.pending_friends_by_me.each do |friend|
      %tr
        %td=link_to friend.screename, user_path(friend)
        %td=friend.email
        %td Pending
        %td n/a