=sub_nav do
  =breadcrumb_list

.col_1
  
  %h2 Profile
  
  .boom_box

    %div[current_object]
      %p=large_avatar
    
      -if current_object == current_user
        %p.edit= link_to 'Edit', edit_user_path(current_user)
  
  -if current_object == current_user
    .boom_box
      %h3 Invitations
      -if current_object.invitations.blank?
        %p You have not sent any invitations yet.
      -else
        %table.invitations
          %thead
            %tr
              %th
                Email address
              %th
                Date sent
              %th
                Status
          %tbody
            -current_object.invitations.each do |invite|
              %tr
                %td
                  =invite.recipient_email
                  -if invite.pending?
                    =link_to '(resend invite)', resend_invitation_path(invite.code), :style => "padding-left: 0.5em"
                %td
                  =distance_of_time_in_words_to_now(invite.created_at) 
                  ago
                %td
                  =invite.state
      
        %ul.invitations
          
              
.col_2
  -if current_object == current_user
    =render :partial => 'users/invite'