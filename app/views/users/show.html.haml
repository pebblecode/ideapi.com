=sub_nav do
  =breadcrumb_list

.col_1
  - if current_object.blank?
    %h3 User does not exist
  - else
    %h2=name_or_screename(current_object).titleize
  
    .boom_box

      %div[current_object]
        .avatar
          =large_avatar(current_object)
        .info
          %p
            %strong Nickname:
            =current_object.screename

          %p
            %strong Name:
            -if current_object.full_name.present?
              =current_object.full_name.titleize
            -else
              unknown
      
          %p
            %strong Email:
            =mail_to(current_object.email)        
      
          -%w(job_title telephone telephone_ext).each do |extra|

            -if current_object.send(extra).present?
              %p
                %strong
                  = succeed ':' do
                    = extra.titleize
                =current_object.send(extra)
        
      
          -if current_object == current_user or current_account.admins.include? current_user
            %p.edit= link_to 'Edit', edit_user_path(current_object), :class => 'link-as-button'
        
        .clear
  - if current_account.admin?(current_user)
    .user-roles
      %h3 User roles and privileges
      - form_for current_object, :html => {:id => 'update-user-roles', :method => :put } do |f|
        = hidden_field_tag 'return_to', user_path(current_object)
        -if current_account.documents.present?
          %table.friends#document-privileges
            %tr
              %th{:title => "Select whether a user can access a document"}
                Can Access Document?
              %th{:title => "Make this user an author on the document"}
                Author?
              %th{:title => "Make this user an approver on the document"}
                Approver?
            -f.fields_for :user_documents, @user_documents do |f|
              %tr
                %td.document-title
                  =f.hidden_field :document_id, :value => f.object.document.id
                  =f.check_box :add_document, :checked => current_object.documents.include?(f.object.document)
                  =f.label :add_document, f.object.document.title
                %td
                  =f.check_box :author
                %td
                  =f.check_box :approver
        %p.submit=f.submit 'Update privileges', :class => 'funky-button'
        
        
.col_2.profile
