=sub_nav do
  =breadcrumb_list

.col_1
  
  %h2 Profile
  
  .boom_box

    %div[current_object]
      %p=large_avatar
      %h3= h salutation

      %p
        %strong= h given_name(current_object)
        -if current_object.author?
          =(current_user?(current_object) ? "have" : "has") 
          %strong=pluralize(current_object.briefs.published.count, 'active brief')
        -if !current_object.proposals.empty?
          =(current_user?(current_object) ? "are" : "is") 
          involved with 
          %strong=pluralize(current_object.proposals.count, 'pitches')
          
      .clear
    
      -if current_object == current_user
        %p.edit= link_to 'Edit', edit_user_path(current_user)
  
  -if current_object == current_user
    .boom_box
      %h3 Your invitations
      -if current_object.invitations.blank?
        %p You have not send any invitations yet.
      -else
        %ul
          -current_object.invitations.each do |invite|
            %li
              =invite.recipient_email 
              ="(#{invite.state})"
              
.col_2
  -if current_object == current_user
    =render :partial => 'users/invite'