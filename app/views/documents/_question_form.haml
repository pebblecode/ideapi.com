=hidden_field_tag 'question[document_item_id]', document_item.id, :id => nil
.speech
  =f.text_area :body, :rows => 10, :cols => 80, :id => "question_body_#{document_item.id}"
  =f.check_box :send_notifications, :checked => true
  =f.label :send_notifications, "Notify collaborators?"
  %p.button
    %img{:src => '/images/ui/loading.gif', :alt => 'Submitting question...', :class => 'loading-gif hide'}/
    =f.submit "submit", :class => "new_question_submit awesome large blue", :id => "question_submit_#{document_item.id}"
.clear
