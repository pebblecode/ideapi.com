.most_important_thing.section
  - if owner?(current_object) and current_object.active?
    = link_to 'edit', 'javascript:void(0)', :class => 'toggle-inline-edit btn-shizzle'
  %span.left &ldquo;
  -if owner?(current_object) and current_object.active?
    .show.editable
      %span.with-tooltip=current_object.most_important_message
    .edit
      - form_for current_object, :html =>{ :class => 'inline-edit-form', :id => "document_mit_form_#{current_object.id}"} do |document_form|
        = hidden_field_tag 'render', 'most_important_thing', :id => "mostimportantthing_render"
        = document_form.text_field :most_important_message, :rows => "5", :id => "document_mit_form_#{current_object.id}_textarea"
        %p.submit
          = link_to 'cancel', 'javascript:void(0)', :class => 'cancel-inline-edit'
          or 
          = document_form.submit 'submit', :id => "document_mit_form_#{current_object.id}_submit", :class => 'submit inline-edit-submit'
  -else 
    .show
      %span=current_object.most_important_message    
  %span.right &rdquo;
