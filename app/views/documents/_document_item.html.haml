%div[document_item]{:class => (document_item_updated_for_user?(document_item) ? "updated" : "")}
  -if document_item.is_heading?
    %h3
      =document_item.title
  -else
    %h4
      =document_item.title
  %div.body
    -if document_item.body.present?
      :textile
        #{document_item.body.lstrip}

  -unless document_item.is_heading? or @print_mode.present?
    %ul.actions
      
      -if current_object.active? 
        
        %li=link_to comments_tab(document_item), '#', {:class => 'toggle_document_item_activity'}
    
    -if current_object.active?
      = render :partial => "activity_stream", :locals => {:document_item => document_item, :document_item_counter => document_item_counter}
  .clear
