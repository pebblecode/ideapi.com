=what_user_is_doing do
  %h3
    \- you are discussing
    =link_to truncate(parent_object.title.downcase, 30), brief_path(parent_object)
    
=title_holder do
  %ul.brief_timeline
    %li
      %span.selected Write
    %li 
      %span Publish
    %li 
      %span Discuss
    %li 
      %span Peer Review
    %li 
      %span Present
    %li 
      %span Complete

%p.most_important_thing=parent_object.most_important_message

.col_1

  %ul.tabbed_links
    %li=tab_link 'Brief document', brief_path(parent_object)
    %li=tab_link 'Brief discussion', brief_creative_questions_path(parent_object)

  %ul.sub_nav
    %li=tab_link 'Recent', brief_creative_questions_path(parent_object, :q => 'recent')
    %li=tab_link 'Answered', brief_creative_questions_path(parent_object, :q => 'answered')
    %li=tab_link 'Unanswered', brief_creative_questions_path(parent_object, :q => 'unanswered')
      
  %ul.question_list
    -if current_objects.empty?
      %li
        %p 
          No questions found
    -else
      =render :partial => 'question', :collection => current_objects