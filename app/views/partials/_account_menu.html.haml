#account-menu

  - unless @user.present?
    %a#account-button.logged-out{:href => "/login"}
      Log in
      %span.end
    #account-dropdown
      #account-form
        %h2 Log in to ideapi
        - form_for UserSession.new, :url => "/login" do |f|
          .email
            =f.label :email
            =f.text_field :email
          .password
            =f.label :password
            =f.password_field :password
          =f.submit "Log me in", :class => "submit"
  - else 
    %a#account-button.logged-in{:href => "/login"}
      = @user.screename
      %span.end
    #account-dropdown
      #account-links
        - if @user.accounts.present?
          - @user.accounts.each do |account|
            = link_to account.name, "#{domain_with_port(account.full_domain)}", :class => "account_link"
          = link_to "Logout", "#{domain_with_port(@user.accounts.first.full_domain)}/user_session/delete", :id => "account_logout"