!!!
%html{ :xmlns => "http://www.w3.org/1999/xhtml" }
  %head
    %title ideapi
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html;charset=utf-8"}
    
    =stylesheet_link_tag %w(experiment http://fonts.googleapis.com/css?family=OFL+Sorts+Mill+Goudy+TT&subset=latin)
  %body{:id => body_ids, :class => body_classes}
    =render :partial => 'user_feedback/feedback_form'
    #container
      = render :partial => 'partials/header'
      #content
        = render :partial => 'partials/page_help'
        %ul{:class => "sub_nav #{app_logo_class}"}
          =yield :sub_nav
        =yield :title_holder
        =yield :side_bar
        .main
          =yield
          .clear
      #footer
        %p
          &copy; 2010
          |
          = mail_to "support@ideapi.com", "Support"
          |
          = mail_to "feedback@ideapi.com", "Feedback"

      .clear
    
    - # Google Analytics only in the dashboard
    - if params[:action] == "index" and params[:controller] == "briefs"
      :javascript
        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-691295-5']);
        _gaq.push(['_setDomainName', '.ideapi.com']);
        _gaq.push(['_trackPageview']);
        (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();
        
    /[if IE 6]<script type="text/javascript" src="http://shapeshed.github.com/ie6-notice/ie6notice-1.0.0.min.js"></script>
    = javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.4/jquery.min.js"
    = javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/jquery-ui.min.js"
    = javascript_include_tag %w(jquery.qtip smartTextBox facebox jquery.cookie jquery.infieldlabel.min jshizzle ajaxify onload )
    = javascript_tag "var AUTH_TOKEN = #{form_authenticity_token.inspect};" if protect_against_forgery? 









