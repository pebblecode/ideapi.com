!!! Strict
%html{ :xmlns => "http://www.w3.org/1999/xhtml" }
  %head
    %title
      Ideapi
    /
      Javascript - Fix the flash of unstyled content
    %script{ :type => "text/javascript" }
    =stylesheet_link_tag %w(reset frontend), :cache => true
    =javascript_include_tag :all, :cache => true
  %body
    #container
      #header
        %h1
          =link_to "Ideapi", "/"      
        %ul.navigation        
          -if logged_in?        
            -if author?
              %li=link_to 'my briefs', briefs_path
            -elsif creative?
              %li=link_to 'my pitches', ''
            %li=link_to 'settings', ''
            %li=link_to 'profile', ''
            %li=link_to 'logout', user_session_path, :method => :delete
          -else
            /%li=link_to 'Tour', ''
            /%li=link_to 'Pricing &amp; Signup', ''
            %li=link_to 'Login', new_user_session_path
      #content
        =yield :title_holder
        =yield :side_bar
        .main=yield
      .clear
      /
        #footer
          #footer-in
            footer