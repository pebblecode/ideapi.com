!!!
%html{ :xmlns => "http://www.w3.org/1999/xhtml" }
  %head
    %title
      ideapi
    %script{ :type => "text/javascript" }  
    %meta{"http-equiv"=>"X-UA-Compatible", :content=>"IE=EmulateIE7"}

    =stylesheet_link_tag %w(reset frontend textile facebox jquery.wysiwyg)
    =javascript_include_tag %w(jquery jqcorners facebox jquery.cookie jquery.wysiwyg jshizzle prototype)

    /[if IE 7]<link href="/stylesheets/ie7.css" media="screen" rel="stylesheet" type="text/css" />
    /[if IE 6]<link href="/stylesheets/ie6.css" media="screen" rel="stylesheet" type="text/css" />
    
    =stylesheet_link_tag %w(reset print), :media => "print"
    
  %body{:id => body_ids, :class => body_classes}
    =render :partial => 'user_feedback/feedback_form'  
    #container
      #header
        %h1
          /=link_to "ideapi", "/"
          %a{:href => home_path, :title => "home"}
            %img{ :src => "/images/ideapi-logo.gif", :alt => "ideapi Logo" }
        %ul.navigation        
          -if logged_in?
            %li=link_unless_current 'dashboard', '/dashboard'
            %li=link_unless_current 'profile', profile_path
            %li=link_unless_current 'contacts', users_path
            -#-if admin?
            -#  %li=link_unless_current 'account', account_path
            %li=link_to 'logout', delete_user_session_path
        .clear
        %ul.sub_nav
          =yield :sub_nav
          
        - if (flash[:error])
          %p.flash.error=flash[:error]
        - elsif (flash[:notice])
          %p.flash.notice=flash[:notice]
          
      #content
        =yield :title_holder
        =yield :side_bar
        .main
          =yield
          .clear
      .clear
    
    - # Google Analytics only in the dashboard
    - if params[:action] == "index" and params[:controller] == "briefs"
      :javascript
        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-691295-5']);
        _gaq.push(['_setDomainName', '.ideapi.com']);
        _gaq.push(['_trackPageview']);
        (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();
  