!!!
%html{ :xmlns => "http://www.w3.org/1999/xhtml" }
  %head
    %title
      ideapi
    %script{ :type => "text/javascript" }  
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html;charset=utf-8"}
    %meta{"http-equiv"=>"X-UA-Compatible", :content=>"IE=EmulateIE7"}

    =stylesheet_link_tag %w(reset frontend textile facebox jquery.wysiwyg)
    =javascript_include_tag %w(jquery jcorners facebox jquery.cookie jquery.wysiwyg SmartTextBox jshizzle)
    =javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.2/jquery-ui.min.js"
    /[if IE 7]<link href="/stylesheets/ie7.css" media="screen" rel="stylesheet" type="text/css" />
    /[if IE 6]<link href="/stylesheets/ie6.css" media="screen" rel="stylesheet" type="text/css" />
    
    =stylesheet_link_tag %w(reset print), :media => "print"
    =javascript_tag "var AUTH_TOKEN = #{form_authenticity_token.inspect};" if protect_against_forgery? 

     
  %body{:id => body_ids, :class => body_classes}
    =render :partial => 'user_feedback/feedback_form'  
    #container
      #header
        %h1
          /=link_to "ideapi", "/"
          %a{:href => home_path, :title => "home"}
            %img{ :src => "/images/ideapi-logo.gif", :alt => "ideapi Logo" }
        - if logged_in? 
          %p#top-menu
            Logged in as:
            %span.name= current_user.full_name
            |
            = link_unless_current 'Profile', profile_path
            - if admin?
              |
              = link_unless_current 'Account', account_path
            | 
            = link_unless_current "Help", help_path
            |
            =link_to 'Logout', delete_user_session_path
          / #list-of-accounts
          %ul.navigation
            %li=link_unless_current 'dashboard', '/dashboard'
            -if current_user && current_user_can_create_briefs?
              %li=link_unless_current 'templates', template_briefs_path
            %li=link_unless_current 'contacts', users_path
        .clear
        %ul.sub_nav
          =yield :sub_nav
          
        - if (flash[:error])
          %p.flash.error=flash[:error]
        - elsif (flash[:notice])
          %p.flash.notice=flash[:notice]
          
      #content
        =yield :title_holder
        =yield :side_bar
        .main
          =yield
          .clear
      #footer
        %p
          &copy; 2010
          |
          = mail_to "support@ideapi.com", "Support"
          |
          = mail_to "feedback@ideapi.com", "Feedback"

      .clear
    
    - # Google Analytics only in the dashboard
    - if params[:action] == "index" and params[:controller] == "briefs"
      :javascript
        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-691295-5']);
        _gaq.push(['_setDomainName', '.ideapi.com']);
        _gaq.push(['_trackPageview']);
        (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();
        
    /[if IE 6]<script type="text/javascript" src="http://shapeshed.github.com/ie6-notice/ie6notice-1.0.0.min.js"></script>
