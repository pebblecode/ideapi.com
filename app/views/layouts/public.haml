!!!
%html{ :xmlns => "http://www.w3.org/1999/xhtml" }
  %head
    %title
      ="ideapi | "
      - if yield(:title)
        =yield(:title)
      - else
        ="Welcome to ideapi"

    %meta{ :content => "IE=EmulateIE7", "http-equiv" => "X-UA-Compatible" }
    %link{ :href => "/stylesheets/marketing.css", :rel => "stylesheet", :media => "screen", :type => "text/css" }
    /[if IE 6]
      %link{ :href => "/stylesheets/marketing_ie6.css", :rel => "stylesheet", :media => "screen", :type => "text/css" }
    /[if IE 7]
      %link{ :href => "/stylesheets/marketing_ie7.css", :rel => "stylesheet", :media => "screen", :type => "text/css" }        
    /[if IE 8]
      %link{ :href => "/stylesheets/marketing_ie8.css", :rel => "stylesheet", :media => "screen", :type => "text/css" }
        
    =javascript_include_tag %w(jquery jquery.infieldlabel.min jquery.lightbox-0.5.min marketing)
  
  - if controller_name == "pages"
  -   @body_class = action_name + "-page page-template"
  %body{:class => @body_class}
    #banner  
    #container
      #header
        #logo
          %a{:href => home_path, :title => "home"}
            %img{ :src => "/images/logo-green.png", :alt => "ideapi Logo" }
        =render :partial => 'partials/account_menu'    
        %ul.navigation
          %li=link_unless_current 'overview', home_path
          %li=link_unless_current 'FAQ', faq_path
          %li=link_unless_current 'tour', tour_path
          %li=link_to 'blog', 'http://blog.ideapi.com'
          /%li=link_unless_current 'pricing', pricing_path
        .clear
          
      #middle-section
        #content
          =yield
          
      #footer
        #footer-content
          #footer-content-left
            %p
              \&copy; 2010 Ideapi Limited 
              | 
              %a{ :href => terms_path, :title => "Terms of Service" }
                Terms of Service
              |
              %a{ :href => privacy_path, :title => "Privacy Policy" }
                Privacy Policy
              |
              %a{ :href => "mailto:info[at]pebbleit", :title => "info", :rel => "ideapi.com", :onclick => "this.href='mailto:'+this.getAttribute('title')+'@'+this.getAttribute('rel')" }="Contact"

          #footer-content-right
            %span.text Follow us on: 
            %ul.social-links                
              %li
                %a{ :href => "http://twitter.com/ideapi/", :title => "follow us on twitter" }
                  %img{:src => "/images/twitter_icon.jpg", :alt => "twitter", :height => "24"}
              %li
                %a{ :href => "http://www.facebook.com/ideapi/", :title => "ideapi @ Facebook" }
                  %img{:src => "/images/facebook_icon.jpg", :alt => "facebook", :height => "24"}
              %li
                %a{ :href => "http://blog.ideapi.com/rss/", :title => "RSS" }
                  %img{:src => "/images/rss_icon.jpg", :alt => "rss", :height => "24" }

    :javascript
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-691295-5']);
      _gaq.push(['_setDomainName', '.ideapi.com']);
      _gaq.push(['_trackPageview']);

      (function() {
      var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
      ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
    /[if IE 6]<script type="text/javascript" src="http://shapeshed.github.com/ie6-notice/ie6notice-1.0.0.min.js"></script>
