#brief_reference.side_box
  %h2 Brief reference
  .contents
    %ul
      %li
        %p.most_important_thing
          %span.left &ldquo;
          =parent_object.most_important_message
          %span.right &rdquo;
        
      -parent_object.brief_items.answered.each do |brief_item|
        %li
          %h3=brief_item.title
          %p=brief_item.body
            
%p=link_to 'back to brief', brief_path(parent_object)