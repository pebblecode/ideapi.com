%div[question]
  %p.title
    %strong Title
    = h question.title
  %p.help_text
    %strong Help text
    = h question.help_text
  %p.response_type_id
    %strong Response type
    = h question.response_type_id

  = link_to 'Show', object_path(question)
  |
  = link_to 'Edit', edit_object_path(question)
  |
  = link_to 'Destroy', object_path(question), :confirm => 'Really destroy question?', :method => :delete
